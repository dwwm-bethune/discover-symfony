<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Discover Symfony{% endblock %}</title>

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/app.js') }}"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {# On peut récupèrer le nom de la route actuelle #}
        {{ app.request.get('_route') }}
        <ul>
            {% block menu %}
            <li class="{{ app.request.get('_route') == 'home' ? 'active' }}">
                <a href="{{ path('home') }}">Accueil</a>
            </li>
            <li class="{{ app.request.get('_route') == 'demo' ? 'active' }}">
                <a href="{{ path('demo') }}">Demo</a>
            </li>
            <li>
                <a href="{{ path('hello') }}">Hello</a>
            </li>
            <li>
                <a href="{{ path('app_ninja_turtle') }}">Les tortues</a>
            </li>
            <li>
                <a href="{{ path('app_product') }}">Les produits</a>
            </li>
            {% endblock %}
        </ul>

        {% block body %}{% endblock %}
    </body>
</html>
